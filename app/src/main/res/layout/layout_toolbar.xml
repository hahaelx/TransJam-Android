<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/titleBackground">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:src="@drawable/welcome_logo"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:text="@string/app_name"
        android:textColor="@color/titleTextColor"
        android:textSize="22sp" />
    <!--<ImageButton-->
    <!--android:background="@android:color/transparent"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_width="25dp"-->
    <!--android:layout_height="25dp"-->
    <!--android:layout_marginBottom="11dp"-->
    <!--android:layout_marginLeft="19dp"-->
    <!--android:src="@drawable/close"/>-->

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/leftButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/close"
        app:fab_colorNormal="@android:color/transparent"
        app:fab_colorPressed="#11FFFFFF"
        app:fab_colorRipple="#99000000"
        app:fab_size="mini"
        app:fab_shadowColor="@color/transparent"
        app:fab_showShadow="@color/transparent"
        app:menu_showShadow="false" />
</RelativeLayout>